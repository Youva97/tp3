<% layout('./layout') %>
<div class="container-fluid">
  <div class="row">
    <div class="card text-bg-success p-3">
      <div class="card-body">
        <% it.types.forEach(function(type){ %>
        <a href="/nos-produits?type=<%= type.type_name %>" class="types-link text-light"><%= type.type_name %></a>
        <% }) %>
      </div>
    </div>
  </div>
  <div class="row">
    <% it.products.forEach(function(product){ %>
    <div class="col-md-4 p-2">
      <div class="card p-2" style="width: 18rem;">
        <img src="<%= product.image %>" class="card-img-top img-fluid" alt="<%= product.product_name %>" style="max-height: 200px;">
        <div class="card-body">
          <h2 class="card-title"><%= product.product_name %></h2>
          <p class="card-text"><%= product.product_description %></p>
          <a href="/nos-produits/<%= product.id %>" class="btn btn-primary">DÃ©tails</a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
